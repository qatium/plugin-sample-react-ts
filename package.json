{
  "name": "sample-plugin-vanilla-ts",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "vite:ui": "vite --config vite.config.ui.ts",
    "vite:engine": "vite --config vite.config.engine.ts build",
    "dev": "concurrently \"npm:dev:*\"",
    "dev:ui": "npm run vite:ui",
    "dev:engine": "npm run vite:engine -- --watch",
    "build": "rimraf dist && npm run build:engine && npm run build:ui",
    "build:ui": "tsc --project src/ui/tsconfig.json && rm -f src/public/engine.js && npm run vite:ui -- build",
    "build:engine": "tsc --project src/engine/tsconfig.json && npm run vite:engine -- --outDir dist",
    "lint": "eslint ./ui --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "jest --verbose",
    "test:watch": "npm run test --watch -i --no-cache"
  },
  "devDependencies": {
    "@qatium/sdk-testing-library": "latest",
    "@testing-library/dom": "^10.1.0",
    "@testing-library/jest-dom": "^6.4.5",
    "@testing-library/react": "^15.0.7",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-singlefile": "^1.0.0"
  },
  "dependencies": {
    "@qatium/plugin": "latest",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
